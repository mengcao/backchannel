<h1>Login</h1>
<%= form_tag(:controller => :users,:action => :login) do %>
    <table>
      <tr>
        <td><%= label_tag(:name,'name') %></td>
        <td><%= text_field_tag(:name) %></td>
      </tr>
      <tr>
        <td><%= label_tag(:password,'password') %></td>
        <td><%= text_field_tag(:password) %></td>
      </tr>
      <tr>
        <td><%= submit_tag('login') %></td>
      </tr>
    </table>
<% end %>