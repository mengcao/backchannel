<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>User:</b>
  <%= @post.user.name %>
</p>

<p>
  <b>Votes:</b>
  <%= @post.votes.count %>
</p>

<h2>comments: </h2>

<p><%= link_to "add comment",new_post_comment_path(@post) %></p>

<ul class="comment_list">
  <%= render :partial => "comments/comment",:collection => @post.comments %>

</ul>
<%= link_to 'Edit', edit_post_path(@post) %> |
