<p id="notice"><%= notice %></p>

<h1>Title: <%= @post.title %></h1>

<p>
  <%= @post.body %>
</p>

<p>
  <b>User:</b>
  <%= @post.user.name %>
</p>

<p>
  <b>Votes:</b>
  <%= @post.votes.count %>
</p>
<% if @post.votes.where(:user_id => 1).count == 0 %>
    <%= button_to 'vote',:controller => 'votes',:action => 'create',:post_id => @post.id %>
<% end %>
<% if @post.votes.where(:user_id => 1).count != 0 %>
    <%= button_to 'un-vote', Vote.where(:votable_id => @post.id).where(:user_id => 1).first,:method => :delete %>
<% end %>

<h2>comments: </h2>

<p><%= link_to "add comment",new_post_comment_path(@post) %></p>

<ul class="comment_list">
  <%= render :partial => "comments/comment",:collection => @post.comments %>

</ul>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
